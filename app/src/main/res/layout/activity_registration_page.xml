<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.RegistrationPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:scaleY="1.0"
                android:scaleX="1.0"
                android:src="@drawable/book"
                />
            <TextView
                android:id="@+id/overlap_text"
                android:layout_width="match_parent"
                android:background="@color/navHeader"
                android:alpha="0.5"
                android:text="Welcome Ritik"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:fontFamily="@font/opensans"
                android:gravity="center_horizontal|top"
                android:layout_height="180dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:id="@+id/register_self_pic"
                android:layout_height="130dp"
                android:layout_marginTop="105dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:src="@drawable/joker"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/navHeader"
            android:layout_margin="8dp"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Name_Registration_page"
                    android:background="@drawable/backgroung_edittext_registration_page"
                    android:textColor="@color/navHeader"
                    android:textColorHint="@color/secondaryLightColor"
                    android:fontFamily="@font/opensans"
                    android:hint="User Name"/>
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/navHeader"
            android:layout_margin="8dp"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Email_Registration_page"
                    android:fontFamily="@font/opensans"

                    android:background="@drawable/backgroung_edittext_registration_page"
                    android:textColor="@color/navHeader"
                    android:textColorHint="@color/secondaryLightColor"
                    android:inputType="textWebEmailAddress"
                    android:hint="Email-Id"/>
            </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/navHeader"
        android:layout_margin="8dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Mobile_Registration_page"
                android:fontFamily="@font/opensans"

                android:background="@drawable/backgroung_edittext_registration_page"
                android:textColor="@color/navHeader"
                android:textColorHint="@color/secondaryLightColor"
                android:inputType="phone"

                android:hint="Mobile No."/>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/navHeader"
        android:layout_margin="8dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/College_Registration_page"
                android:fontFamily="@font/opensans"

                android:background="@drawable/backgroung_edittext_registration_page"
                android:textColor="@color/navHeader"
                android:textColorHint="@color/secondaryLightColor"

                android:hint="Institute Name"/>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/navHeader"
        android:layout_margin="8dp"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Branch_Registration_page"
                android:fontFamily="@font/opensans"

                android:background="@drawable/backgroung_edittext_registration_page"
                android:textColor="@color/navHeader"
                android:textColorHint="@color/secondaryLightColor"

                android:hint="Branch"/>
        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-Shirt size :"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/opensans"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/TShirt_Size_Registration_page"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:dropDownSelector="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/spinner_background"
                android:padding="8dp"/>
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_reg"
                android:text="Register"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:id="@+id/register_button_Registration_page"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>